@page
@model bcity_assessment.Pages.Contact.Contact

@{
    ViewData["Title"] = "Contacts page";
}


<div class="container" style="display: flex; justify-content: space-around">
    <div>
        @if (@Model.Contacts.Count != 0)
        {
        <table class="table table-hover">
            <thead class="table-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Email Address</th>
                <th scope="col">No. of Linked Clients</th>
            </tr>
            </thead>
            @foreach (var item in @Model.Contacts)
            {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Email</td>
                <td style="text-align: center;">
                    <a href="/Contact/LinkClient/@item.Id">@item.Clients.Count</a>
                </td>
            </tr>
            }
        </table>
        }
        else
        {
        <p>No Contact(s) found</p>
        }
    </div>

    <div>
        <a class="btn btn-light" asp-page="/Contact/CreateContact">Add +</a>
    </div>
</div>
